---
import Layout from "../../layouts/Layout.astro";

const nodeOgCode = `<span class="text-violet-400">const</span> <span class="text-sky-300">express</span> = <span class="text-violet-400">require</span>(<span class="text-amber-300">'express'</span>);
<span class="text-violet-400">const</span> <span class="text-sky-300">app</span> = <span class="text-emerald-400">express</span>();

<span class="text-sky-300">app</span>.<span class="text-emerald-400">get</span>(<span class="text-amber-300">'/blog/:slug'</span>, <span class="text-violet-400">async</span> (<span class="text-sky-300">req</span>, <span class="text-sky-300">res</span>) =&gt; &#123;
  <span class="text-violet-400">const</span> <span class="text-sky-300">post</span> = <span class="text-violet-400">await</span> <span class="text-emerald-400">getPost</span>(<span class="text-sky-300">req</span>.<span class="text-sky-300">params</span>.<span class="text-sky-300">slug</span>);

  <span class="text-violet-400">const</span> <span class="text-sky-300">ogImageUrl</span> = <span class="text-amber-300">\`https://shotapi.io/api/screenshot?\`</span> +
    <span class="text-amber-300">\`url=https://yoursite.com/og-template?title=\$&#123;<span class="text-emerald-400">encodeURIComponent</span>(<span class="text-sky-300">post</span>.<span class="text-sky-300">title</span>)&#125;\`</span> +
    <span class="text-amber-300">\`&amp;width=1200&amp;height=630&amp;format=png\`</span>;

  <span class="text-sky-300">res</span>.<span class="text-emerald-400">send</span>(<span class="text-amber-300">\`
    &lt;meta property="og:image" content="\$&#123;<span class="text-sky-300">ogImageUrl</span>&#125;" /&gt;
  \`</span>);
&#125;);`;
---

<Layout
  title="Generate OG Images with a Screenshot API"
  description="Use ShotAPI to generate dynamic Open Graph images from any URL. Perfect for social media previews and link cards."
  path="/blog/og-image-api"
>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "Generate OG Images with a Screenshot API",
    "description": "Use ShotAPI to generate dynamic Open Graph images from any URL. Perfect for social media previews and link cards.",
    "author": {
      "@type": "Organization",
      "name": "ShotAPI"
    },
    "publisher": {
      "@type": "Organization",
      "name": "ShotAPI",
      "logo": {
        "@type": "ImageObject",
        "url": "https://shotapi.io/logo.png"
      }
    },
    "datePublished": "2026-02-10",
    "dateModified": "2026-02-10"
  })} />

  <div class="container mx-auto px-4 py-12 max-w-5xl">
    <!-- Breadcrumbs -->
    <nav class="mb-8 text-sm text-muted-foreground">
      <a href="/" class="hover:text-foreground">Home</a>
      <span class="mx-2">/</span>
      <a href="/blog" class="hover:text-foreground">Blog</a>
      <span class="mx-2">/</span>
      <span class="text-foreground">OG Image API</span>
    </nav>

    <!-- Hero -->
    <div class="mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
        Generate OG Images with a Screenshot API
      </h1>
      <p class="text-xl text-muted-foreground mb-8">
        Use ShotAPI to generate dynamic Open Graph images from any URL. Perfect for social media previews and link cards.
      </p>
      <div class="text-sm text-muted-foreground">
        Published February 10, 2026
      </div>
    </div>

    <!-- What Are OG Images -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-foreground mb-8">
        What Are Open Graph Images?
      </h2>
      <p class="text-muted-foreground mb-8">
        Open Graph images are the preview thumbnails you see when sharing links on Twitter, LinkedIn, Slack, Discord, and other platforms. They dramatically increase click-through rates.
      </p>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="rounded-lg border border-border bg-card p-8 text-center">
          <div class="text-5xl font-bold text-emerald-500 mb-3">3x</div>
          <div class="text-lg font-bold text-foreground mb-2">Higher CTR</div>
          <div class="text-sm text-muted-foreground">With OG images vs without</div>
        </div>
        <div class="rounded-lg border border-border bg-card p-8 text-center">
          <div class="text-5xl font-bold text-emerald-500 mb-3">1200×630</div>
          <div class="text-lg font-bold text-foreground mb-2">Recommended Size</div>
          <div class="text-sm text-muted-foreground">Works across all platforms</div>
        </div>
        <div class="rounded-lg border border-border bg-card p-8 text-center">
          <div class="text-5xl font-bold text-emerald-500 mb-3">Auto</div>
          <div class="text-lg font-bold text-foreground mb-2">Generated</div>
          <div class="text-sm text-muted-foreground">No design work needed</div>
        </div>
      </div>
    </section>

    <!-- How to Use -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-foreground mb-8">
        How to Use ShotAPI for OG Images
      </h2>
      <div class="space-y-6">
        <div class="rounded-lg border border-border bg-card p-6">
          <div class="flex items-center gap-4 mb-3">
            <div class="w-10 h-10 rounded-full bg-emerald-500 text-white flex items-center justify-center font-bold">1</div>
            <h3 class="text-xl font-bold text-foreground">Create a Template Page</h3>
          </div>
          <p class="text-muted-foreground ml-14">
            Build a simple HTML page at <code class="text-sm bg-muted px-2 py-1 rounded">yoursite.com/og-template</code> that accepts URL parameters and renders dynamic content.
          </p>
        </div>

        <div class="rounded-lg border border-border bg-card p-6">
          <div class="flex items-center gap-4 mb-3">
            <div class="w-10 h-10 rounded-full bg-emerald-500 text-white flex items-center justify-center font-bold">2</div>
            <h3 class="text-xl font-bold text-foreground">Screenshot the Template</h3>
          </div>
          <p class="text-muted-foreground ml-14 mb-4">
            Use ShotAPI to capture it with the perfect OG image dimensions:
          </p>
          <pre class="border-none bg-transparent p-0 text-sm ml-14"><code class="block bg-zinc-950 p-4 rounded-lg overflow-x-auto"><span class="text-emerald-400">curl</span> <span class="text-amber-300">"https://shotapi.io/api/screenshot?url=https://yoursite.com/og-template?title=Hello&width=1200&height=630&format=png"</span> \
  <span class="text-violet-400">-H</span> <span class="text-amber-300">"X-API-Key: YOUR_KEY"</span></code></pre>
        </div>

        <div class="rounded-lg border border-border bg-card p-6">
          <div class="flex items-center gap-4 mb-3">
            <div class="w-10 h-10 rounded-full bg-emerald-500 text-white flex items-center justify-center font-bold">3</div>
            <h3 class="text-xl font-bold text-foreground">Add Meta Tags</h3>
          </div>
          <p class="text-muted-foreground ml-14 mb-4">
            Point your OG image meta tags to the ShotAPI URL:
          </p>
          <pre class="border-none bg-transparent p-0 text-sm ml-14"><code class="block bg-zinc-950 p-4 rounded-lg overflow-x-auto"><span class="text-violet-400">&lt;meta</span> <span class="text-sky-300">property</span>=<span class="text-amber-300">"og:image"</span> <span class="text-sky-300">content</span>=<span class="text-amber-300">"https://shotapi.io/api/screenshot?url=..."</span> <span class="text-violet-400">/&gt;</span></code></pre>
        </div>
      </div>
    </section>

    <!-- Code Examples -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-foreground mb-8">
        Code Examples
      </h2>

      <div class="mb-8">
        <h3 class="text-xl font-bold text-foreground mb-4">HTML Meta Tags</h3>
        <pre class="border-none bg-transparent p-0 text-sm"><code class="block bg-zinc-950 p-4 rounded-lg overflow-x-auto"><span class="text-violet-400">&lt;head&gt;</span>
  <span class="text-violet-400">&lt;meta</span> <span class="text-sky-300">property</span>=<span class="text-amber-300">"og:title"</span> <span class="text-sky-300">content</span>=<span class="text-amber-300">"My Awesome Blog Post"</span> <span class="text-violet-400">/&gt;</span>
  <span class="text-violet-400">&lt;meta</span> <span class="text-sky-300">property</span>=<span class="text-amber-300">"og:description"</span> <span class="text-sky-300">content</span>=<span class="text-amber-300">"Learn how to build amazing things"</span> <span class="text-violet-400">/&gt;</span>
  <span class="text-violet-400">&lt;meta</span> <span class="text-sky-300">property</span>=<span class="text-amber-300">"og:image"</span> <span class="text-sky-300">content</span>=<span class="text-amber-300">"https://shotapi.io/api/screenshot?url=https://yoursite.com/og-template?title=My%20Awesome%20Blog%20Post&width=1200&height=630"</span> <span class="text-violet-400">/&gt;</span>
  <span class="text-violet-400">&lt;meta</span> <span class="text-sky-300">name</span>=<span class="text-amber-300">"twitter:card"</span> <span class="text-sky-300">content</span>=<span class="text-amber-300">"summary_large_image"</span> <span class="text-violet-400">/&gt;</span>
<span class="text-violet-400">&lt;/head&gt;</span></code></pre>
      </div>

      <div class="mb-8">
        <h3 class="text-xl font-bold text-foreground mb-4">Node.js Dynamic OG Images</h3>
        <pre class="border-none bg-transparent p-0 text-sm"><code class="block bg-zinc-950 p-4 rounded-lg overflow-x-auto" set:html={nodeOgCode}></code></pre>
      </div>

      <div>
        <h3 class="text-xl font-bold text-foreground mb-4">Direct URL Screenshot</h3>
        <p class="text-muted-foreground mb-4">
          Don't want to build a template? Just screenshot the page itself:
        </p>
        <pre class="border-none bg-transparent p-0 text-sm"><code class="block bg-zinc-950 p-4 rounded-lg overflow-x-auto"><span class="text-emerald-400">curl</span> <span class="text-amber-300">"https://shotapi.io/api/screenshot?url=https://yoursite.com/blog/post-slug&width=1200&height=630"</span> \
  <span class="text-violet-400">-H</span> <span class="text-amber-300">"X-API-Key: YOUR_KEY"</span></code></pre>
      </div>
    </section>

    <!-- Best Practices -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-foreground mb-8">
        Best Practices
      </h2>
      <div class="grid md:grid-cols-1 gap-6">
        <div class="rounded-lg border border-border bg-card p-6">
          <h3 class="text-xl font-bold text-foreground mb-3">Use 1200×630 Dimensions</h3>
          <p class="text-muted-foreground">
            This is the sweet spot that works across all platforms (Twitter, LinkedIn, Facebook, Slack, Discord).
          </p>
        </div>
        <div class="rounded-lg border border-border bg-card p-6">
          <h3 class="text-xl font-bold text-foreground mb-3">Cache the Images</h3>
          <p class="text-muted-foreground">
            Generate OG images once and save them. Don't regenerate on every page load. ShotAPI responses are already cached, but storing locally is faster.
          </p>
        </div>
        <div class="rounded-lg border border-border bg-card p-6">
          <h3 class="text-xl font-bold text-foreground mb-3">Keep Text Large and Centered</h3>
          <p class="text-muted-foreground">
            Small text doesn't work in thumbnails. Use large fonts (48px+) and center your content.
          </p>
        </div>
        <div class="rounded-lg border border-border bg-card p-6">
          <h3 class="text-xl font-bold text-foreground mb-3">Test with Social Debuggers</h3>
          <p class="text-muted-foreground">
            Use Twitter Card Validator, LinkedIn Post Inspector, and Facebook Sharing Debugger to verify your OG images render correctly.
          </p>
        </div>
        <div class="rounded-lg border border-border bg-card p-6">
          <h3 class="text-xl font-bold text-foreground mb-3">Use PNG for Sharp Text</h3>
          <p class="text-muted-foreground">
            PNG produces crisp text. JPEG works for photos but can make text blurry. WebP is a good middle ground.
          </p>
        </div>
      </div>
    </section>

    <!-- Comparison Table -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-foreground mb-8">
        OG Image Generation Methods
      </h2>
      <div class="rounded-lg border border-border overflow-hidden">
        <table class="w-full">
          <thead class="bg-muted">
            <tr>
              <th class="text-left p-4 font-bold text-foreground">Method</th>
              <th class="text-left p-4 font-bold text-foreground">Pros</th>
              <th class="text-left p-4 font-bold text-foreground">Cons</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <tr>
              <td class="p-4 text-foreground font-medium">Screenshot API (ShotAPI)</td>
              <td class="p-4 text-muted-foreground">
                <ul class="text-sm space-y-1">
                  <li><span class="text-emerald-500">✓</span> Use HTML/CSS you already know</li>
                  <li><span class="text-emerald-500">✓</span> No infrastructure</li>
                  <li><span class="text-emerald-500">✓</span> Dynamic content</li>
                </ul>
              </td>
              <td class="p-4 text-muted-foreground text-sm">
                API call per image (free tier: 100/day)
              </td>
            </tr>
            <tr class="bg-muted/30">
              <td class="p-4 text-foreground font-medium">Canvas/Satori</td>
              <td class="p-4 text-muted-foreground">
                <ul class="text-sm space-y-1">
                  <li><span class="text-emerald-500">✓</span> Fully self-hosted</li>
                  <li><span class="text-emerald-500">✓</span> Fast generation</li>
                </ul>
              </td>
              <td class="p-4 text-muted-foreground text-sm">
                Limited CSS support, harder to design
              </td>
            </tr>
            <tr>
              <td class="p-4 text-foreground font-medium">Static Images</td>
              <td class="p-4 text-muted-foreground">
                <ul class="text-sm space-y-1">
                  <li><span class="text-emerald-500">✓</span> Simple</li>
                  <li><span class="text-emerald-500">✓</span> Fast</li>
                </ul>
              </td>
              <td class="p-4 text-muted-foreground text-sm">
                Not dynamic, manual design work
              </td>
            </tr>
            <tr class="bg-muted/30">
              <td class="p-4 text-foreground font-medium">Self-hosted Puppeteer</td>
              <td class="p-4 text-muted-foreground">
                <ul class="text-sm space-y-1">
                  <li><span class="text-emerald-500">✓</span> Full control</li>
                  <li><span class="text-emerald-500">✓</span> No API limits</li>
                </ul>
              </td>
              <td class="p-4 text-muted-foreground text-sm">
                Infrastructure, maintenance, complexity
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- CTA -->
    <section class="text-center">
      <div class="rounded-lg border border-border bg-card p-12">
        <h2 class="text-3xl font-bold text-foreground mb-4">
          Start Generating OG Images Today
        </h2>
        <p class="text-xl text-muted-foreground mb-8">
          100 free screenshots per day. Perfect for dynamic Open Graph images.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/docs"
            class="inline-block px-8 py-4 rounded-lg bg-primary text-primary-foreground font-bold hover:opacity-90 transition-opacity"
          >
            View Documentation
          </a>
          <a
            href="https://dashboard.shotapi.io"
            class="inline-block px-8 py-4 rounded-lg border border-border text-foreground font-bold hover:bg-muted transition-colors"
          >
            Get API Key
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>
