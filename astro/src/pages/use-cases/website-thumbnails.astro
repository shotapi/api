import Layout from "../../layouts/Layout.astro";

const nodejsCode = `<span class="text-violet-400">const</span> <span class="text-sky-300">fetch</span> = <span class="text-violet-400">require</span>(<span class="text-amber-300">'node-fetch'</span>);
<span class="text-violet-400">const</span> <span class="text-sky-300">fs</span> = <span class="text-violet-400">require</span>(<span class="text-amber-300">'fs'</span>);

<span class="text-violet-400">const</span> <span class="text-sky-300">websites</span> = [
  <span class="text-amber-300">'https://github.com'</span>,
  <span class="text-amber-300">'https://stackoverflow.com'</span>,
  <span class="text-amber-300">'https://reddit.com'</span>
];

<span class="text-violet-400">async function</span> <span class="text-emerald-400">generateThumbnails</span>() &#123;
  <span class="text-violet-400">for</span> (<span class="text-violet-400">const</span> <span class="text-sky-300">url</span> <span class="text-violet-400">of</span> <span class="text-sky-300">websites</span>) &#123;
    <span class="text-violet-400">const</span> <span class="text-sky-300">apiUrl</span> = <span class="text-amber-300">\`https://shotapi.io/api/screenshot?url=\$&#123;<span class="text-emerald-400">encodeURIComponent</span>(<span class="text-sky-300">url</span>)&#125;&amp;width=400&amp;height=300&amp;format=webp\`</span>;

    <span class="text-violet-400">const</span> <span class="text-sky-300">response</span> = <span class="text-violet-400">await</span> <span class="text-emerald-400">fetch</span>(<span class="text-sky-300">apiUrl</span>, &#123;
      <span class="text-sky-300">headers</span>: &#123; <span class="text-amber-300">'X-API-Key'</span>: <span class="text-amber-300">'YOUR_KEY'</span> &#125;
    &#125;);

    <span class="text-violet-400">const</span> <span class="text-sky-300">buffer</span> = <span class="text-violet-400">await</span> <span class="text-sky-300">response</span>.<span class="text-emerald-400">buffer</span>();
    <span class="text-violet-400">const</span> <span class="text-sky-300">filename</span> = <span class="text-amber-300">\`thumbnail-\$&#123;<span class="text-sky-300">url</span>.<span class="text-emerald-400">replace</span>(<span class="text-amber-300">/[^a-z0-9]/gi</span>, <span class="text-amber-300">'-'</span>)&#125;.webp\`</span>;

    <span class="text-sky-300">fs</span>.<span class="text-emerald-400">writeFileSync</span>(<span class="text-sky-300">filename</span>, <span class="text-sky-300">buffer</span>);
    <span class="text-sky-300">console</span>.<span class="text-emerald-400">log</span>(<span class="text-amber-300">\`Generated: \$&#123;<span class="text-sky-300">filename</span>&#125;\`</span>);
  &#125;
&#125;

<span class="text-emerald-400">generateThumbnails</span>();`;
